generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model Collection {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  userId      String
  cards       Card[]

  @@unique([name, userId])
  @@index([userId])
}

model Card {
  id           Int        @id @default(autoincrement())
  question     String
  answer       String
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId Int
  box          Int

  @@index([collectionId])
}
